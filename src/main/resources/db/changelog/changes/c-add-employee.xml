<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- HinzufÃ¼gen einer Spalte zu einer bestehenden Tabelle -->

    <changeSet author="mike" id="c1">
        <addColumn catalogName="postgres"
            schemaName="public"
            tableName="transaction">
            <column name="employee" type="INT"/>
        </addColumn>
    </changeSet>

    <!-- Speichert den aktuellen Zustand der Datenbank -->

    <changeSet id="c2" author="mike">
        <tagDatabase tag="pre-constraints"/>
    </changeSet>
</databaseChangeLog>